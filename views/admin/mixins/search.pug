mixin search(keyword)
    form(id="form-search")
        .input-group
            //- "value=keyword" used to preserve the entered keyword after reloading the page
            input(
                type="text",
                placeholder="Enter keyword",
                name="keyword",
                class="form-control",
                value=keyword
            )
            .input-group-append
                button(
                    class="btn btn-success",
                    type="submit"
                ) Search
